<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:padding="8dp"
    android:background="@color/Black"
    tools:context="com.xingyeda.ad.MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:visibility="visible"
            />
    </FrameLayout>


    <ImageView
        android:id="@+id/ad_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_defualt_portrait" />

    <ImageView
        android:id="@+id/iv_Defualt"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_defualt_portrait"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.xingyeda.ad.widget.SquareHeightRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rotation="270"
        android:layout_alignParentRight="true"
        android:gravity="bottom"
        >

        <TextView
            android:gravity="bottom|center"
            android:padding="5dp"
            android:id="@+id/tips"
            android:textColor="@color/Red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="0dp"
            android:text="mac" />

    </com.xingyeda.ad.widget.SquareHeightRelativeLayout>


    <ScrollView
        android:visibility="gone"
        android:id="@+id/scrollView_LogDebug"
        android:background="@color/Transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#8000"
            android:padding="20dp"
            android:id="@+id/tv_LogDebug"
            android:textSize="12sp"
            android:textColor="@color/White"
            />
    </ScrollView>

    <TextView
        android:gravity="center"
        android:padding="5dp"
        android:id="@+id/tv_CountSecond"
        android:textColor="@color/White"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:rotation="270"
        android:background="#8000"
        android:text="" />

</RelativeLayout>

